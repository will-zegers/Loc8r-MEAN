extends layout

block content
  .row.page-header
      .col-lg-12
        h1= pageHeader.title

  .row
    .col-xs-12.col-sm-8
      - if (error == "val")
        .alert.alert-danger(roles="alert") Name and rating field are required, please try again
      form#addReview.form-horizontal(action="#{url}", method="post", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="rating") Rating
          .col-xs-12.col-sm-3
            select#rating.form-control.input-sm(name="rating")
              option(selected, disabled, hidden) -
              option 5
              option 4
              option 3
              option 2
              option 1
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="review") Review
          .col-sm-10
            textarea#review.form-control(name="review",rows="5")
        button#submit.btn.btn-primary.pull-right Add my review
    .col-xs-12.col-sm-4
